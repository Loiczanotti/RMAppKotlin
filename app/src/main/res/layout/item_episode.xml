<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
            android:id="@+id/rm_character_list_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/rm_character_list_card_elevation"
            android:layout_marginStart="@dimen/rm_character_list_card_margin_start"
            android:layout_marginEnd="@dimen/rm_character_list_card_margin_end"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/rm_character_list_image_view"
                    android:layout_width="@dimen/rm_character_list_image_view_width"
                    android:layout_height="@dimen/rm_character_list_image_view_height"
                    android:layout_marginStart="@dimen/rm_character_list_image_view_margin_start"
                    android:layout_marginTop="@dimen/rm_character_list_image_view_margin_top"
                    android:layout_marginBottom="@dimen/rm_character_list_image_view_margin_bottom"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_episodes"
                    android:tint="@color/colorPrimary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/rm_episode_list_name"
            />
            <TextView
                    android:id="@+id/rm_episode_list_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="test"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/rm_episode_list_name_margin_top"
                    android:layout_marginStart="@dimen/rm_episode_list_name_margin_start"
                    android:layout_marginEnd="@dimen/rm_episode_list_name_margin_end"
                    android:layout_marginBottom="@dimen/rm_episode_list_name_margin_bottom"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/rm_episode_list_air_date"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/rm_character_list_image_view"
            />
            <TextView
                    android:id="@+id/rm_episode_list_air_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="test"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/rm_episode_list_air_date_margin_end"
                    android:layout_marginStart="@dimen/rm_episode_list_air_date_margin_start"
                    android:layout_marginBottom="@dimen/rm_episode_list_air_date_margin_bottom"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintTop_toBottomOf="@id/rm_episode_list_name"
                    app:layout_constraintBottom_toTopOf="@id/rm_episode_list_episode"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/rm_character_list_image_view"
            />

            <TextView
                    android:id="@+id/rm_episode_list_episode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/rm_episode_list_episode_margin_bottom"
                    android:layout_marginStart="@dimen/rm_episode_list_episode_margin_start"
                    android:layout_marginEnd="@dimen/rm_episode_list_episode_margin_end"
                    tools:text="test"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintTop_toBottomOf="@id/rm_episode_list_air_date"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/rm_character_list_image_view"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>